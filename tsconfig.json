{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "skipLibCheck": true,

        "moduleResolution": "Bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["app.ts", "app/**/*.ts"],
    "exclude": ["node_modules"]
}
